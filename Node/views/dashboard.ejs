<h1 class="mt-4">Dashboard</h1>
<p class="lead mb-3">Welcome
    <%= name %>
</p>
<% if(stories){ %>
    <% for(var i=0; i < stories.length; i++) { %>
        <p>
            <%=stories[i].title%>
        </p>
        <p> by
            <a href="/posts/user/<%=stories[i].user._id%>">
                <%=stories[i].user.name %>
            </a>
        </p>
        <div class="card-action center-align">
            <a href="/posts/<%=stories[i]._id%>" class="btn btn-info mb-2">Read More</a>
        </div>
        <% } %>
            <%}else { %>
                <p>No stories to show</p>
                <%}%>
                    <a href="/posts/add" class="btn btn-primary">Add</a>
                    <a href="/users/logout" class="btn btn-secondary">Logout</a>