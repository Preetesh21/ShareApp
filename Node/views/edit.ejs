<h3>Edit Story</h3>
<br>
<div class="row">
    <form action="/posts/<%=story._id%>?_method=PUT" method="POST" class="col-m-10">
        <input type="hidden" name="_method" value="PUT">
        <div class="row">
            <div class="input-field">
                <label for="title">Title</label>
                <input type="text" id="title" name="title" value="<%=story.title%>">

            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Tell Us Your Story:</h5>
                <textarea id="body" name="body"><%=story.body%></textarea>
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Update" class="btn btn-success mr-2">
            <a href="/dashboard" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>